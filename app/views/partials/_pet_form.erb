<form class="<%= form_type %>-pet-form" ng-init="report.user_id = <%= @user_id %>; report.report_type = '<%= form_type %>'">
  <input type="hidden" name="report[report_type]" ng-model="report.report_type" value="<%= form_type %>">
  <input type="hidden" class="img_url" ng-model="report.img_url" name="report[img_url]" value="">
  <input type="hidden" name="report[user_id]" ng-model="report.user_id" value="<%= @user_id %>">

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="form-group">
        <div class="image-upload-preview">
          <!--<img ng-show="myForm.file.$valid" ngf-thumbnail="image" class="thumb">-->
          <img ng-if="report.img_url" ng-src="{{report.img_url}}" class="thumb">
        </div><!-- image-upload-preview -->

        <label>
          <span class="glyphicon glyphicon-camera" aria-hidden="true" style="font-size: 32px; cursor: pointer"></span>

          <input type="file" ngf-select  ngf-change="uploadImage($file, report)" ng-model="image" name="file" accept="image/*" ngf-max-size="90MB">
        </label>
      </div><!-- form-group -->
    </div><!-- col -->
  </div><!-- row -->

  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <div class="form-group">
        <label class="sr-only" for="report[animal_type]">Pet Type</label>
        <select name="report[animal_type]" class="form-control" ng-model="report.animal_type">
          <option value="">Pet Type</option>
          <option value="dog">Dog</option>
          <option value="cat">Cat</option>
          <option value="bird">Bird</option>
          <option value="reptile">Reptile</option>
          <option value="other">Other</option>
        </select>
      </div><!-- form-group -->
    </div><!-- col -->
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <div class="form-group">
        <label class="sr-only" for="report[sex]">Gender</label>
        <select name="report[sex]" class="form-control" ng-model="report.sex">
          <option value="">Gender</option>
          <option value="male">Male</option>
          <option value="female">Female</option>
        </select>
      </div><!-- form-group -->
    </div><!-- col -->
  </div><!-- row -->
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <div class="form-group">
        <label class="sr-only" for="report[pet_size]">Pet Size</label>
        <select name="report[pet_size]" class="form-control" ng-model="report.pet_size">
          <option value="">Size</option>
          <option value="small">Small</option>
          <option value="medium">Medium</option>
          <option value="large">Large</option>
          <option value="x-large">Extra Large</option>
        </select>
      </div><!-- form-group -->
    </div><!-- col -->
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <div class="form-group">
        <label class="sr-only" for="report[age]">Age</label>
        <select name="report[age]" class="form-control" ng-model="report.age">
          <option value="">Age</option>
          <option value="Baby">Baby</option>
          <option value="young">Young</option>
          <option value="adult">Adult</option>
          <option value="senior">Senior</option>
        </select>
      </div><!-- form-group -->
    </div><!-- col -->
  </div><!-- row -->
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <div class="form-group">
        <label class="sr-only" for="report[breed]">Breed</label>
        <input type="text" class="form-control" id="<%= form_type %>-pet-breed" placeholder="Pet Breed" name="report[breed]" ng-model="report.breed">
      </div><!-- form-group -->
    </div><!-- col -->
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <div class="form-group">
        <label class="sr-only" for="report[color]">Color</label>
        <input type="text" class="form-control" id="<%= form_type %>-pet-color" placeholder="Pet Color" name="report[color]" ng-model="report.color">
      </div><!-- form-group -->
    </div><!-- col -->
  </div><!-- row -->
  <% if form_type == "lost" %>
    <!-- include name field if lost report -->
    <div class="row">
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <div class="form-group">
          <label class="sr-only" for="report[tag_list]">Keywords</label>
          <input type="text" class="form-control" id="<%= form_type %>-pet-tags" placeholder="Additional keywords i.e. timid, brown ears" name="report[tag_list]" ng-model="report.tag_list">
        </div><!-- form-group -->
      </div><!-- col -->
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <div class="form-group">
          <label class="sr-only" for="report[pet_name]">Pet Name</label>
          <input type="text" class="form-control" id="<%= form_type %>-pet-name" placeholder="Pet Name" name="report[pet_name]" ng-model="report.pet_name">
        </div><!-- form-group -->
      </div><!-- col -->
    </div><!-- row -->
  <% else %>
    <!-- omit name field if found report -->
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="form-group">
          <label class="sr-only" for="report[tag_list]">Keywords</label>
          <input type="text" class="form-control" id="<%= form_type %>-pet-tags" placeholder="Additional keywords i.e. timid, brown ears" name="report[tag_list]" ng-model="report.tag_list">
        </div><!-- form-group -->
      </div><!-- col -->
    </div><!-- row -->
  <% end %>
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="form-group">
        <label class="sr-only" for="report[last_seen]">Last Seen</label>
        <input placeholder="Last Seen" type="text" name="report[last_seen]" id="<%= form_type %>-last-seen" value="" class="form-control datetimepicker" ng-model="report.last_seen" />
      </div><!-- form-group -->
    </div><!-- col -->
  </div><!-- row -->
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="form-group">
        <label class="sr-only" for="report[notes]">Notes</label>
        <textarea name="report[notes]" class="form-control" id="<%= form_type %>-pet-notes" cols="30" rows="7" placeholder="Describe the incident" ng-model="report.notes"></textarea>
      </div><!-- form-group -->
    </div><!-- col -->
  </div><!-- row -->
  <input class="hidden-lat-field" type="hidden" name="report[lat]" value="" ng-model="report.lat">
  <input class="hidden-lng-field" type="hidden" name="report[lng]" value="" ng-model="report.lng">

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="form-group">
        <input type="text"
               class="form-control"
               ng-model="report.address"
               ng-blur="geocoding()"
               placeholder="Address">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="<%= form_type %>-map-wrapper">
      <div id="<%= form_type %>-map-canvas" class="map-canvas">
      </div><!-- map-canvas -->
    </div><!-- col -->
  </div><!-- row -->
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="form-group">
        <button type="submit" class="btn btn-default" ng-click="submit(report)">Submit</button>
      </div><!-- form-group -->
    </div><!-- col -->
  </div><!-- row -->
</form>
